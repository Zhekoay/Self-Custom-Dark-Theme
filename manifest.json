{
	"manifest_version": 2,

	"name": "Self-Custom Dark Theme",
	"version": "0.1.0",
	"description": "Self-modified dark theme for web pages.",
	"icons": { 	"16": "icon16.png",
				"64": "icon64.png",
				"128": "icon128.png" },
	"author": "ZK Software",
	
	"browser_action": {
	"default_title": "Set addon for YT.",
    "default_icon": "icon.png",
	"default_popup": "selection.html"
	},
	
	"permissions": [
		"tabs",
		"https://www.google.com/*",
		"https://www.messenger.com/*",
		"https://www.youtube.com/*"
		
	],

	"content_scripts": [
	{
		"css": ["app_yt_HoveredImg.css"],
		"matches": ["https://www.youtube.com/*"],
		"all_frames": true
	},
	{
		"css": ["fb_messenger_styles.css"],
		"matches": ["https://www.messenger.com/*"]
	},
	{
		"css": ["google_styles.css"],
		"matches": ["https://www.google.com/*","https://translate.google.com/*","https://apis.google.com/*"],
		"all_frames": true
	}
	]
}
